// Int this problem we will reverse the string word wise by using StringBuilder function.


//Note: StringBuilder is way more better than StringBuffer due to its time complexity.

import java.util.*;


public class ReverseString {
	
	public static StringBuilder reverseString(String input) {
		StringBuilder input1 = new StringBuilder();
		input1.append(input);
		input1.reverse();
		return input1;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		String input = scan.next();
		StringBuilder output = reverseString(input);
		System.out.println(output);
	}

}
